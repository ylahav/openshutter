{
  "templateName": "modern",
  "displayName": "Modern",
  "description": "A clean, minimalist template with smooth animations and modern typography. Perfect for photography portfolios and modern galleries.",
  "version": "1.0.0",
  "author": "OpenShutter Team",
  "thumbnail": "/templates/modern/thumbnail.jpg",
  "category": "modern",
  "features": {
    "responsive": true,
    "darkMode": true,
    "animations": true,
    "seoOptimized": true
  },
  "visibility": {
    "hero": true,
    "languageSelector": true,
    "authButtons": true,
    "footerMenu": true
  },
  "layout": {
    "maxWidth": "1280px",
    "containerPadding": "1.5rem",
    "gridGap": "1.5rem"
  },
  "components": {
    "hero": "modern-hero",
    "albumCard": "modern-card",
    "photoCard": "modern-card",
    "albumList": "modern-gallery-grid",
    "gallery": "modern-gallery",
    "navigation": "modern-header-nav",
    "footer": "modern-footer"
  },
  "pageConfig": {
    "home": {
      "showHero": true,
      "showServices": true,
      "showContact": true
    },
    "albums": {
      "showHeader": true,
      "showFilters": true,
      "showSearch": true
    },
    "album": {
      "showHeader": true,
      "showNavigation": true,
      "showMetadata": true
    }
  },
  "componentsConfig": {
    "header": {
      "showLogo": true,
      "showSiteTitle": true,
      "menu": [
        {
          "labelKey": "navigation.home",
          "href": "/"
        },
        {
          "labelKey": "navigation.albums",
          "href": "/albums"
        },
        {
          "label": "About",
          "href": "/about"
        },
        {
          "label": "Contact",
          "href": "/contact"
        }
      ],
      "enableThemeToggle": true,
      "enableLanguageSelector": true,
      "showGreeting": false,
      "showAuthButtons": true
    },
    "footer": {
      "showCopyright": true,
      "showSocialMedia": true,
      "showPoweredBy": true
    }
  },
  "pages": {
    "home": "pages/Home.tsx",
    "gallery": "pages/Gallery.tsx",
    "album": "pages/Album.tsx",
    "login": "pages/Login.tsx"
  }
}
