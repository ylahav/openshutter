{
  "templateName": "default",
  "displayName": "Default",
  "description": "Clean and simple default template",
  "version": "1.0.0",
  "author": "OpenShutter",
  "thumbnail": "/templates/default/thumbnail.jpg",
  "category": "minimal",
  "features": {
    "responsive": true,
    "darkMode": true,
    "animations": true,
    "seoOptimized": true
  },
  "visibility": {
    "hero": true,
    "languageSelector": true,
    "authButtons": true,
    "footerMenu": true
  },
  "components": {
    "hero": "components/Hero.tsx",
    "albumCard": "components/AlbumCard.tsx",
    "photoCard": "components/PhotoCard.tsx",
    "albumList": "components/AlbumList.tsx",
    "gallery": "components/Gallery.tsx",
    "navigation": "components/Header.tsx",
    "footer": "components/Footer.tsx"
  },
  "pages": {
    "home": "pages/Home.tsx",
    "gallery": "pages/Gallery.tsx",
    "album": "pages/Gallery.tsx",
    "login": "pages/Login.tsx"
  },
  "pageConfig": {
    "home": {
      "showHero": true,
      "showServices": false,
      "showContact": false
    },
    "albums": {
      "showHeader": true,
      "showFilters": true,
      "showSearch": true
    },
    "album": {
      "showHeader": true,
      "showNavigation": true,
      "showMetadata": true
    }
  },
  "componentsConfig": {
    "header": {
      "showLogo": true,
      "showSiteTitle": true,
      "menu": [
        {
          "labelKey": "navigation.home",
          "href": "/"
        },
        {
          "labelKey": "navigation.albums",
          "href": "/albums"
        }
      ],
      "enableThemeToggle": true,
      "enableLanguageSelector": true,
      "showGreeting": false,
      "showAuthButtons": true
    },
    "footer": {
      "showCopyright": true,
      "showSocialMedia": false,
      "showPoweredBy": true
    }
  }
}
