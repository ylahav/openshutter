{
  "templateName": "minimal",
  "displayName": "Minimal",
  "version": "1.0.0",
  "author": "OpenShutter",
  "description": "Minimal, clean template using shadcn/ui components.",
  "category": "minimal",
  "features": { 
    "responsive": true, 
    "darkMode": true, 
    "animations": false, 
    "seoOptimized": true 
  },
  "visibility": {
    "hero": true,
    "languageSelector": true,
    "authButtons": true,
    "footerMenu": true
  },
  "components": {
    "hero": "components/Hero.tsx",
    "navigation": "components/Header.tsx",
    "footer": "components/Footer.tsx"
  },
  "pages": { 
    "home": "pages/Home.tsx", 
    "gallery": "pages/Gallery.tsx", 
    "album": "pages/Album.tsx", 
    "login": "pages/Login.tsx",
    "search": "pages/Search.tsx"
  },
  "assets": { 
    "thumbnail": "/templates/default/thumbnail.jpg" 
  },
  "pageConfig": {
    "home": {
      "showHero": true,
      "showServices": true,
      "showContact": true
    },
    "albums": {
      "showHeader": true,
      "showFilters": true,
      "showSearch": true
    },
    "album": {
      "showHeader": true,
      "showNavigation": true,
      "showMetadata": true
    }
  },
  "componentsConfig": {
    "header": {
      "showLogo": true,
      "showSiteTitle": true,
      "menu": [
        { "labelKey": "navigation.home", "href": "/" },
        { "labelKey": "navigation.albums", "href": "/albums" }
      ],
      "enableThemeToggle": true,
      "enableLanguageSelector": true,
      "showGreeting": false,
      "showAuthButtons": true
    },
    "footer": {
      "showCopyright": true,
      "showSocialMedia": true,
      "showPoweredBy": false
    }
  }
}
