{
  "templateName": "fancy",
  "displayName": "Elegant Photography",
  "version": "2.0.0",
  "author": "OpenShutter",
  "description": "Sophisticated, luxurious template with timeless appeal for high-end photography",
  "category": "fancy",
  "features": {
    "responsive": true,
    "darkMode": true,
    "animations": true,
    "seoOptimized": true
  },
  "visibility": {
    "hero": true,
    "languageSelector": true,
    "authButtons": true,
    "footerMenu": true
  },
  "colors": {
    "primary": "#d4af37",
    "secondary": "#8b7355",
    "accent": "#f4e4bc",
    "background": "#faf9f7",
    "text": "#2c2c2c",
    "muted": "#6b6b6b"
  },
  "fonts": {
    "heading": "Playfair Display",
    "body": "Inter"
  },
  "layout": {
    "maxWidth": "1400px",
    "containerPadding": "2rem",
    "gridGap": "2rem"
  },
  "components": {
    "hero": "components/Hero.tsx",
    "navigation": "components/Header.tsx",
    "footer": "components/Footer.tsx"
  },
  "pages": {
    "home": "pages/Home.tsx",
    "gallery": "pages/Gallery.tsx",
    "album": "pages/Album.tsx",
    "login": "pages/Login.tsx",
    "search": "pages/Search.tsx"
  },
  "assets": {
    "thumbnail": "/templates/fancy/thumbnail.jpg"
  },
  "pageConfig": {
    "home": {
      "showHero": true,
      "showServices": true,
      "showContact": true,
      "showTestimonials": true,
      "showCategories": true
    },
    "albums": {
      "showHeader": true,
      "showFilters": true,
      "showSearch": true
    },
    "album": {
      "showHeader": true,
      "showNavigation": true,
      "showMetadata": true
    }
  },
  "componentsConfig": {
    "header": {
      "showLogo": true,
      "showSiteTitle": true,
      "menu": [
        { "labelKey": "navigation.home", "href": "/" },
        { "labelKey": "navigation.albums", "href": "/albums" },
        { "labelKey": "navigation.about", "href": "/about" },
        { "labelKey": "navigation.contact", "href": "/contact" }
      ],
      "enableThemeToggle": true,
      "enableLanguageSelector": true,
      "showGreeting": false,
      "showAuthButtons": true
    },
    "footer": {
      "showCopyright": true,
      "showSocialMedia": true,
      "showPoweredBy": false
    }
  }
}
