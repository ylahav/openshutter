# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# MongoDB Configuration
MONGODB_URI=mongodb://your-mongodb-host:27017/openshutter
MONGODB_DB=openshutter

# NextAuth Configuration
NEXTAUTH_SECRET=your-super-secure-production-secret-key-here
NEXTAUTH_URL=https://your-domain.com

# Google OAuth2 Configuration (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REFRESH_TOKEN=your-google-refresh-token
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id

# AWS S3 Configuration (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Local Storage Configuration
LOCAL_STORAGE_PATH=/app/storage
STORAGE_PROVIDER=local

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Storage Configuration
DEFAULT_STORAGE_PROVIDER=local
