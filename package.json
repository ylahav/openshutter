{
  "name": "openshutter",
  "version": "1.0.5",
  "type": "module",
  "description": "A comprehensive photo gallery management system with multi-storage support",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --kill-others --names \"backend,frontend\" --prefix-colors \"blue,green\" \"pnpm --filter openshutter-backend dev\" \"node scripts/delay-start.js 3000 pnpm --filter openshutter dev\"",
    "dev:frontend": "pnpm --filter openshutter dev",
    "dev:backend": "pnpm --filter openshutter-backend dev",
    "build": "pnpm --filter openshutter-backend build && pnpm --filter openshutter build",
    "build:frontend": "pnpm --filter openshutter build",
    "build:backend": "pnpm --filter openshutter-backend build",
    "start": "concurrently --kill-others-on-fail --kill-others --delay 3000 \"pnpm --filter openshutter-backend start\" \"pnpm --filter openshutter preview\"",
    "start:frontend": "pnpm --filter openshutter preview",
    "start:backend": "pnpm --filter openshutter-backend start",
    "lint": "pnpm --filter openshutter lint && pnpm --filter openshutter-backend lint",
    "type-check": "pnpm --filter openshutter type-check",
    "build:prod": "node -e \"const {execSync}=require('child_process');const cmd=process.platform==='win32'?'powershell -ExecutionPolicy Bypass -File scripts/build-for-production.ps1':'bash scripts/build-for-production.sh';execSync(cmd,{stdio:'inherit',cwd:process.cwd()})\"",
    "deploy": "./scripts/deploy-to-server.sh",
    "cleanup-storage-configs": "node scripts/cleanup-storage-configs.cjs"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "keywords": [
    "photo-gallery",
    "image-management",
    "sveltekit",
    "nestjs",
    "mongodb",
    "google-drive",
    "aws-s3",
    "typescript"
  ],
  "author": "OpenShutter Team",
  "license": "MIT",
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
