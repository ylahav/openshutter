# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/openshutter
MONGODB_DB=openshutter

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REFRESH_TOKEN=your_google_refresh_token_here
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id_here

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name_here

# Local Storage Configuration
# You can use either:
# - Absolute path: LOCAL_STORAGE_PATH=C:\projects\web\openshutter\uploads
# - Relative path: LOCAL_STORAGE_PATH=./uploads (will be resolved from project root)
LOCAL_STORAGE_PATH=./uploads
LOCAL_MAX_FILE_SIZE=100MB

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:4000

# Storage Configuration
DEFAULT_STORAGE_PROVIDER=google-drive

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:4000

